{
  "compilerOptions": {
    "target": "ES6", 
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true, 
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true, 
    "sourceMap": true, 
    "rootDir": "./src", 
    "resolveJsonModule": true, 
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true, 
    "noImplicitAny": true,
    "strictNullChecks": true, 
    "allowJs": true, 
    "baseUrl": "./src", 
    "paths": {
      "*": ["node_modules/*"] 
    }
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}